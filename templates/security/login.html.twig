{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

{% for message in app.flashes('message') %}
 	<center><div class="alert alert-success">
        {{ message }}
	 </div></center>
{% endfor %}

{% for message in app.flashes('warning') %}
 	<center><div class="alert alert-warning">
        {{ message }}
	 </div></center>
{% endfor %} 

{% for message in app.flashes('danger') %}
 	<center><div class="alert alert-danger">
        {{ message }}
	 </div></center>
{% endfor %}



<link rel="stylesheet" href="{{ asset('css/connexion.css') }}">

 {% if error %}
        <center><div class="alert alert-danger">{% trans %}Mail ou mot de passe incorrect.{% endtrans %} </div></center>
        {% endif %}

<div class="modal-dialog text-center">
	<div class="col-sm-9 main-section">
		<div class="modal-content">
    
			<div class="col-12 bee-img">
				<img src="{{ asset('bee.png') }}">
			</div>

			<div class="col-12 form-input">
    			<H1><font color=black>{% trans %}Connexion{% endtrans %}</font></H1>

				<form  action="{{ path('security_login')}}" method="post">

    				<div class="form-group">
            			<input placeholder="{% trans %}Mail{% endtrans %}..." required name="_username" type="text" class="form-control">
       				</div>

        			<div class="form-group">
            			<input placeholder="{% trans %}Mot de passe{% endtrans %}..." required name="_password" type="password" class="form-control">
        			</div>

        			<button type="submit" class="btn btn-success">{% trans %}Connexion{% endtrans %}</button>
    	</form>
    </div>
		</div>
   </div> 
</div>

{% endblock %}