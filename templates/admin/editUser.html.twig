{% extends 'base.html.twig' %}

{% block title %}Modification d'un apiculteur{% endblock %}

{% block body %}
<meta charset="UTF-8">
<br>
<center><h1>{% trans %}Modification d'un apiculteur{% endtrans %}</h1></center><br>

<div class="d-flex justify-content-around">
    {{ form_start(formUser) }}
    
    <form>
  <div class="form-row">
    <div class="form-group col-md-6">
      {{ form_row(formUser.nom, { 'attr' : { 'placeholder':'Nom'}}) }}
    </div>
    <div class="form-group col-md-6">
       {{ form_row(formUser.prenom, { 'label' : 'Prénom' , 'attr' : { 'placeholder':'Prénom'}}) }}
    </div>
  </div>
        {{ form_row(formUser.pseudo, { 'label' : 'Pseudo' , 'attr' : { 'placeholder':'Pseudo'}}) }}
        {{ form_row(formUser.mail, { 'label': 'Mail', 'attr' : { 'placeholder':'Adresse mail'}}) }}
        {{ form_row(formUser.tel, { 'label':'Téléphone', 'attr' : { 'placeholder':'Téléphone'}}) }}
        <div class="form-row">
    <div class="form-group col-md-6">
        {{ form_row(formUser.codepostal, { 'label':'Code postal', 'attr' : { 'placeholder':'Code postal'}}) }}
         </div>
    <div class="form-group col-md-6">
        {{ form_row(formUser.ville, { 'attr' : { 'placeholder':'Ville'}}) }}
        </div>
  </div>
        {{ form_row(formUser.postaddr, { 'label':'Adresse postale','attr' : { 'placeholder':'Adresse postale'}}) }}
        {% if is_granted('ROLE_ADMIN') %} {{ form_widget(formUser.roles) }} {% else %} <div style="display:none">{{ form_widget(formUser.roles) }}</div> {% endif %}
    
	<br><button type="submit" class="btn btn-success">{% trans %}Modifier{% endtrans %}</button>
	{{ form_end(formUser) }}
    
</div>
{% endblock %}