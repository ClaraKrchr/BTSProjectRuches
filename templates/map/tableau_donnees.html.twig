{% extends 'nouvellepage/ruches_privees.html.twig' %}
{% block tableau_donnees %}
<div id ="block2" class="col-lg-6">
    <center>
    {% if peseruches %}
        <h1>Les ruches pr&eacute;sentes dans la r&eacute;gion</h1>
        <br></br>
        
        <table border bgcolor="white" cellpadding="5px">
        <tr>
        	<td>Id</td>
        	<td>Nom p&egrave;se ruche</td>
        	<td>Nom Propri&eacute;taire</td>
        	<td>Nom Rucher</td>
          	<td>Date d'installation</td>
        	<td>Visibilit&eacute;</td>
        	<td>R&eacute;gion</td>
        </tr>
        {% for peseruche in peseruches %}
		<tr> 
			<td> {{ peseruche.id }}						</td>
			<td> {{ peseruche.nompeseruche }}			</td>
			<td> {{ peseruche.Proprietaire.Nom }}		</td>
			<td> {{ peseruche.rucher.Nom }}				</td>
			<td> {{ peseruche.dateinstall|date("m/d/Y") }}			</td>
			<td> {{ peseruche.visibilite }}				</td>
			<td> {{ peseruche.Rucher.Region }}			</td>
		</tr>
        {% endfor %}
        </table>
        {% else %}
         <h1>Aucune ruche dans la r&eacute;gion choisie</h1>
        
        {% endif %}
        <br></br>
       
    </center>
</div>
{% endblock %}