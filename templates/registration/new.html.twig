{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

<meta charset="UTF-8">
<link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
<center><h1>Inscription</h1></center>
<br>
	<div class="d-flex justify-content-around">
		<div class="droite">
		{{ form_start(registrationForm) }}       
        
        {{ form_row(registrationForm.Nom, { 'attr' : { 'placeholder':'Nom'}}) }}
        {{ form_row(registrationForm.Prenom, { 'attr' : { 'placeholder':'Prenom'}}) }}
        {{ form_row(registrationForm.Adresse_mail, { 'attr' : { 'placeholder':'Adresse mail'}}) }}
        {{ form_row(registrationForm.Mot_de_passe, { 'attr' : { 'placeholder':'Mot de passe'}}) }}
        {{ form_row(registrationForm.Confirmer_le_mdp, {'attr' : {'placeholder':'Saisir le meme mdp'}}) }}
        {{ form_row(registrationForm.Telephone, { 'attr' : { 'placeholder':'Telephone'}}) }}
        {{ form_row(registrationForm.Code_postal, { 'attr' : { 'placeholder':'Code postal'}}) }}
        {{ form_row(registrationForm.Ville, { 'attr' : { 'placeholder':'Ville'}}) }}
        {{ form_row(registrationForm.Adresse_postale, { 'attr' : { 'placeholder':'Adresse postale'}}) }}
        
        <button type="submit" class="btn btn-primary">Inscription</button>
        </div>
   </div>
{{ form_end(registrationForm) }}


{%  endblock %}