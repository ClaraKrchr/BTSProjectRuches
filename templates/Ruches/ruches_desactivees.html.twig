{% extends 'base.html.twig' %}
{% block body %}
<link rel="stylesheet" href="{{ asset('css/ruche_privees.css') }}" type="text/css"> 
<meta charset="UTF-8">
            
                <center><a href = "{{ path('ruches_privees')}}"><button>{% trans %}Retour{% endtrans %}</button></a>
            <br></br>
        {% block tableau_donnees %}
        {% if apiculteurs %}
       
        <table border bgcolor="white" cellpadding="5px">
        <tr>
        	<td>{% trans %}Nom ruche{% endtrans %}</td>
        	<td>{% trans %}Action{% endtrans %}</td>
        </tr>
	        {% for apiculteur in apiculteurs %}
	        	{% if apiculteur.ruche.etat == '4' %}
			<tr> 
				<td><a href="{{ path('info_ruche', {'nomruche' : apiculteur.ruche.nomruche}) }}"> {{ apiculteur.ruche.nomruche }}	</a></td>
				
				<td><a href="{{ path('carnet_ruche', {'ruche' : apiculteur.ruche.nomruche}) }}" class="btn btn-dark">{% trans %}Voir le carnet associé{% endtrans %}</a></td>
			</tr>
				{% endif %}
        	{% endfor %}
        </table>
    	{% else %}
         <h1>Vous n'avez pas de ruche archivée.</h1>
    	{% endif %}
        {% endblock %}
        </center>
{% endblock %}