{% extends 'Ruches/ruches_privees.html.twig' %}
{% block tableau_donnees %}
<!-- for HTML5 -->
<meta charset="UTF-8">
    <center>
    <br></br>
    {% if apiculteurs %}
        <h1>Mes ruches présentes dans la région {{ region }}</h1>
       
        <table border bgcolor="white" cellpadding="5px">
        <tr>
        	<td>Nom ruche</td>
        	<td>Etat</td>
          	<td>Date d'installation</td>
        	<td>Visibilité</td>
        </tr>
        {% for apiculteur in apiculteurs %}
		<tr> 
			<td><a href="{{ path('info_ruche',{nomruche: apiculteur.ruche.nomruche  }) }}"> {{ apiculteur.ruche.nomruche }}			</a></td>
			<td> {% if apiculteur.ruche.etat == '0' %}En attente{% elseif apiculteur.ruche.etat =='1' %}Dans un rucher{% elseif apiculteur.ruche.etat =='2' %}Chez un apiculteur{% endif %}</td>
			<td> {{ apiculteur.ruche.dateinstall|date("m/d/Y") }}			</td>
			<td> {% if apiculteur.ruche.visibilite=='0' %}Public{% elseif apiculteur.ruche.visibilite=='1' %}Privée{% endif %}	</td>
		</tr>
        {% endfor %}
        </table>
        {% else %}
         <h1>Aucune ruche dans la région {{ region }}</h1>
        {% endif %}
        <br></br>
       
    </center>
{% endblock %}